@model CatalogItem


<form>

    <img class="esh-catalog-thumbnail" src="http://localhost/@Model.PictureUrl" height = 150px weight = 120px />

    <div class="esh-catalog-name">
        <span>@Model.Name</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
    <button asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@Model.Id" type="submit" class="btn btn-dark add-to-basket-btn">Add to cart</button>
    <input type="hidden" asp-for="@Model.Id" name="id" />
</form>
